new = 1
url = "https://zen.yandex.ru"

def openweb():
    webbrowser.open(url,new=new)

urlb = Button(root,text="МОТИВАЦИЯ",width=40,height=5,bg='red',fg='yellow',font='ComicSans 14',command=openweb)
urlb.grid(row=5,column=0,columnspan=4)



